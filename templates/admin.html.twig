<!DOCTYPE html>
<html>
<head>
    {% block title %} <title>Admin Red FIC </title> {% endblock %}
    {% block stylesheets %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <link rel="stylesheet" href={{ asset('asset/css/main.css') }} />
        <link rel="icon" href="{{ asset('assets/images/favicon.png') }}" type="image/png"/>
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('assets/images/apple-touch-icon-120x120-precomposed.png') }}"/>
