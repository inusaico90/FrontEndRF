            <li>Implementado por <a href="mailto:erneyjj@hotmail.es?subject=RedFICs">Kevin Acosta</a></li>
        </ul>

    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('asset/js/jquery.min.js')}}"></script>
    <script src="{{ asset('asset/js/browser.min.js')}}"></script>
