                        <img src="{{ asset('assets/images/logo2.png') }}" id="logo" width="150" height="150">
                        RedFIC
                {% endif %}
            </a>
        </h1>

        <!-- Nav -->
        <nav id="nav">
            <ul>
                {% if app.user %}
                    <li><a href="{{ path('app_logout') }}" style="color: red">Cerrar Sesión</a></li>
