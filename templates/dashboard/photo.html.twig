{% block javascripts %}
    {% for posts in posts %}
        <script>
            function agregartxt{{ posts.id }} () {
                var texto = `{{ posts.contenido }}`;
                let recortado = texto.slice(0, 1000) + "...";
                var text = document.createTextNode(recortado);
                document.getElementById("{{ posts.id }}").appendChild(text);
            }
        </script>
    {% endfor %}
