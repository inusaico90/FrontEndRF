{% extends 'base.html.twig' %}
{% block head %}
    <title>{{ posts.titulo }}</title>
    <meta name="description" content={{ posts.contenido }}>
    {{ parent() }}
{% endblock %}
{% block cabeza %}
<body id="inner_page">
{{ parent() }}
{% endblock %}
{% block cuerpo %}
    <!-- section -->
    <section class="main_full inner_page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 text_align_center">
                    <div class="full heading_s1 center">
                        <h2>{{ posts.titulo }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end section -->

    <!-- section -->
    <section class="layout_padding section about_dottat">
        <div class="container">
            <div class="col-lg-12 text_align_center">
                <h6>{{ posts.fechapublicacion | date("d/m/Y") }}</h6>
                <p>{{ posts.contenido }}</p>
                <div class="cours">
                    <object data="http://www.adobe.com/content/dam/Adobe/en/devnet/acrobat/pdfs/pdf_open_parameters.pdf"
                            type="application/pdf" width="100%" height="100%">
                        <a href="{{ asset('uploads/fotos/'~posts.foto) }}" target="_blank" style="position: center"><i
                                    class="fa fa-file-pdf-o" style="font-size: 50px"></i>
                            <p>Descargar PDF</p>
                        </a>
                    </object>
                </div>
            </div>
        </div>
    </section>
    <!-- end section -->
{% endblock %}

{% block cierre %}
    {{ parent() }}
{% endblock %}
{% block Copyright %}
    {{ parent() }}
{% endblock %}
