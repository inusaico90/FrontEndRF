{% extends 'admin.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/popup.css') }}" type="text/css"/>
{% endblock %}

{% block body %}
    {{ parent() }}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <body class="is-preload">
    <!-- Content -->
    <div id="content">
        <div class="inner">
            <div class="example-wrapper">
                {% for mesagge in app.flashes('correcto') %}
                    <div class="alert alert-success">
                        <div id="popup" class="overlay">
                            <div id="popupBody">
                                <h2>FELICIDADES</h2>
                                <a id="cerrar" href="#popup">&times;</a>
                                <div class="popupContent">
                                    <p> {{ mesagge }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {{ form(formulario) }}
            </div>
        </div>
        {% if app.user %}
            <div class="mb-3">
                Has iniciado sesión como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Cerrar
                    Sesión</a>
            </div>
        {% endif %}
    </div>
    </body
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}